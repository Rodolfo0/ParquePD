@model ParqueProcesoDesarrollo.Web.Models.SupplyViewModel
@{
    ViewData["Title"] = "Consumibles";
}

<div class="view">
    <div class="manager-table__top">
        <h3 class="manager-table__caption">Ingresa los nuevos datos</h3>
    </div>
        <form asp-action="Edit">
            <div class="view__container">
                <div>
                    <div class="form-group">
                        <label asp-for="Barcode" class="view__label"></label>
                        <input asp-for="Barcode" class="view__input" />
                        <span asp-validation-for="Barcode" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="view__label"></label>
                        <input asp-for="Description" class="view__input" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UnitPrice" class="view__label"></label>
                        <input asp-for="UnitPrice" class="view__input" />
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ProviderId" class="view__label"></label>
                        <select asp-for="ProviderId" class="view__input" asp-items="Model.Providers"></select>
                        <span asp-validation-for="ProviderId" class="text-danger"></span>
                    </div>

                     <div class="form-group">
                        <label asp-for="Quantity" class="view__label"></label>
                        <input asp-for="Quantity" class="view__input" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>


                </div>
            </div>
            

        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="button"><i class="bi bi-arrow-return-left"></i></a>
</div>

