@model IEnumerable<ParqueProcesoDesarrollo.Web.Data.Entities.TicketSale>
@{
    ViewData["Title"] = "Ventas";
}

<div class="manager-table__top">
    <h3 class="manager-table__caption">Ventas de Pulseras y Correas</h3>

</div>

<a asp-action="CreateSale" class="manager-table__add"><i class="fa-solid fa-plus"></i></a>

<table class="manager-table">
    <thead class="manager-table__headers">
        <tr class="manager-table__row">
            <th class="manager-table__header" scope="col">
                @Html.DisplayNameFor(model => model.DateOfIssue)
            </th>
            <th class="manager-table__header" scope="col">
                @Html.DisplayNameFor(model => model.Subtotal)
            </th>
            <th class="manager-table__header" scope="col">
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th class="manager-table__header" scope="col">
                Detalles
            </th>
            @if (this.User.IsInRole("Admin"))
            {
                <th class="manager-table__header" scope="col">
                    Eliminar
                </th>
            }
        </tr>
    </thead>
    <tbody class="manager-table__body">
        @foreach (var item in Model)
        {
            <tr class="manager-table__row">
                <td class="manager-table__data" scope="row">
                    @Html.DisplayFor(modelItem => item.DateOfIssue)
                </td>
                <td class="manager-table__data" scope="row">
                    @Html.DisplayFor(modelItem => item.Subtotal)
                </td>
                <td class="manager-table__data" scope="row">
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td class="manager-table__data manager-table__option" data-label="Detalles">
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-magnifying-glass"></i></a>
                </td>
                    @if (this.User.IsInRole("Admin"))
                    {
                         <td class="manager-table__data manager-table__option" data-label="Eliminar">
                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                            </td>
                    }
            </tr>
        }
    </tbody>
</table>