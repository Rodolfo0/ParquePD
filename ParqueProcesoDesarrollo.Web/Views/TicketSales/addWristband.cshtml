@model ParqueProcesoDesarrollo.Web.Models.AddItemViewModel
@{
    ViewData["Title"] = "Add Wristband";
}

<h1>Agrega un Producto a la orden</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addWristband">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="WristbandId" class="control-label"></label>
                <select asp-for="WristbandId" asp-items="Model.TypeOfWristband" class="form-control"></select>
                <span asp-validation-for="WristbandId" class="text-danger"></span>
            </div>
            
            

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameOfPersonInCharge" class="control-label"></label>
                <input asp-for="NameOfPersonInCharge" class="form-control" />
                <span asp-validation-for="NameOfPersonInCharge" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Regresar</a>
            </div>
        </form>
    </div>
</div>



