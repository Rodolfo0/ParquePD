@model IEnumerable<ParqueProcesoDesarrollo.Web.Data.Entities.ProviderContact>

@{
    ViewData["Title"] = "Contactos";
}

<h1>Contactos</h1>

<p>
    <a asp-action="Create">Agregar</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.PaternalSurname)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.MaternalSurname)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.BusinessHours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.PaternalSurname)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.MaternalSurname)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.Post)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.BusinessHours)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-search"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
