@model ParqueProcesoDesarrollo.Web.Models.ProviderContactViewModel

@{
    ViewData["Title"] = "Personas de Contacto";
}

<div class="view">

    <div class="manager-table__top">
        <h3 class="manager-table__caption">Agregar nuevo</h3>
    </div>

        <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProviderId"/>

        <label asp-for="Name" class="view__label"></label>
        <input asp-for="Name" class="view__input" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <label asp-for="PaternalSurname" class="view__label"></label>
        <input asp-for="PaternalSurname" class="view__input" />
        <span asp-validation-for="PaternalSurname" class="text-danger"></span>

        <label asp-for="MaternalSurname" class="view__label"></label>
        <input asp-for="MaternalSurname" class="view__input" />
        <span asp-validation-for="MaternalSurname" class="text-danger"></span>

        <label asp-for="Email" class="view__label"></label>
        <input asp-for="Email" class="view__input" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="Phone" class="view__label"></label>
        <input asp-for="Phone" class="view__input" />
        <span asp-validation-for="Phone" class="text-danger"></span>

        <label asp-for="Post" class="view__label"></label>
        <input asp-for="Post" class="view__input" />
        <span asp-validation-for="Post" class="text-danger"></span>

        <label asp-for="BusinessHours" class="view__label"></label>
        <input asp-for="BusinessHours" class="view__input" />
        <span asp-validation-for="BusinessHours" class="text-danger"></span>
           
            <div class="view__button-container">

                <a asp-action="Details" asp-controller="Providers" asp-route-id="@Model.ProviderId" class="contacto__button nta-btn-common view__button">Regresar</a>
                <input type="submit" value="Agregar" class="nta-btn-secondary" />
            </div>
        </form>

        
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
