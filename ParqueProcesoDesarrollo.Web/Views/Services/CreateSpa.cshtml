@model ParqueProcesoDesarrollo.Web.Models.addDogViewModel

@{
    ViewData["Title"] = "Spa";
}

<div class="view">
    <div class="manager-table__top">
        <h3 class="manager-table__caption">Realizar un registro</h3>
    </div>

    <form asp-action="CreateSpa" enctype="multipart/form-data">
        <div class="view__container">
            <div>
                <label asp-for="IdClient" class="view__label">Seleccione el cliente</label>
                <select asp-for="IdClient" class="view__input" asp-items="Model.Wristbands"></select>
                <span asp-validation-for="IdClient" class="text-danger"></span>
                
                <label asp-for="idSize" class="view__label">Cantidad de kits</label>
                <select asp-for="idSize" id="sizep" class="view__input" asp-items="Model.Sizes"></select>
                <span asp-validation-for="idSize" class="text-danger"></span>

                <input type="hidden" asp-for="Size.Name" id="size-name" />
                
                <div class="form-group">
                <label asp-for="Size.Price" class="control-label">Total</label>
                <input asp-for="Size.Price" id="pricex" readonly class="view__input" />
                <span asp-validation-for="Size.Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                <label asp-for="DateOfCheckInTime" class="control-label">Fecha y hora de entrada</label>
                <input asp-for="DateOfCheckInTime" readonly class="view__input" />
                <span asp-validation-for="DateOfCheckInTime" class="text-danger"></span>
                </div>

            </div>
        </div>
        <div class="view__button-container">
        
            <a asp-action="IndexSpa" class="contacto__button nta-btn-common view__button">Regresar</a>
            <input type="submit" value="Confirmar" class="nta-btn-secondary"  />
        </div>
    </form>
</div>

<script>
    let idSize = document.getElementById("sizep");
    let price = document.getElementById("pricex");
    let sizeName = document.getElementById("size-name");

    idSize.addEventListener("change", function(){
        if(idSize.value == 1){
            price.value = 260;
            sizeName.value = "Pequeño";
        }
        if(idSize.value == 2){
            price.value = 310;
            sizeName.value = "Mediano";
        }
        if(idSize.value == 3){
            price.value = 450;
            sizeName.value = "Grande";
        }
    });
</script>