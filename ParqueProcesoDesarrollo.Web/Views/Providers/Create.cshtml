@model ParqueProcesoDesarrollo.Web.Models.ProviderViewModel

@{
    ViewData["Title"] = "Proveedores";
}

<div class="view">
    <div class="manager-table__top">
        <h3 class="manager-table__caption">Agregar nuevo</h3>
    </div>

        <form asp-action="Create">
            <div class="view__container">
            <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="SocialReason" class="view__label"></label>
                <input asp-for="SocialReason" class="view__input" />
                <span asp-validation-for="SocialReason" class="text-danger"></span>


                <label asp-for="RFC" class="view__label"></label>
                <input asp-for="RFC" class="view__input" />
                <span asp-validation-for="RFC" class="text-danger"></span>

                <label asp-for="Address" class="view__label"></label>
                <input asp-for="Address" class="view__input" />
                <span asp-validation-for="Address" class="text-danger"></span>

                <label asp-for="Email" class="view__label"></label>
                <input asp-for="Email" class="view__input" />
                <span asp-validation-for="Email" class="text-danger"></span>

                <label asp-for="Phone" class="view__label"></label>
                <input asp-for="Phone" class="view__input" />
                <span asp-validation-for="Phone" class="text-danger"></span>

                <label asp-for="StatusId" class="view__label"></label>
                <select asp-for="StatusId" asp-items="Model.Statuses" class="view__input"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            </div>
                <div class="view__button-container">

                    <a asp-action="Index" class="contacto__button nta-btn-common view__button">Regresar</a>
                    <input type="submit" value="Agregar" class="nta-btn-secondary" />
                </div>
            
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
