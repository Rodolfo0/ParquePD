@model IEnumerable<ParqueProcesoDesarrollo.Web.Data.Entities.Provider>

@{
  
}


<div class="manager-table__top">
    <h3 class="manager-table__caption">Proveedores</h3>

</div>

<a asp-action="Create" class="manager-table__add"><i class="fa-solid fa-plus"></i></a>

<table class="manager-table">
    <thead class="manager-table__headers">
        <tr class="manager-table__row">
            <th class="manager-table__header" scope="col">
                @Html.DisplayNameFor(model => model.SocialReason)
            </th>
            <th class="manager-table__header" scope="col">
                @Html.DisplayNameFor(model => model.RFC)
            </th>
            <th class="manager-table__header" scope="col">
                @Html.DisplayNameFor(model => model.Address)
            </th class="manager-table__header" scope="col">
            <th class="manager-table__header" scope="col">
                @Html.DisplayNameFor(model => model.Email)
            </th class="manager-table__header" scope="col">
            <th class="manager-table__header" scope="col">
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th class="manager-table__header" scope="col">
                @Html.DisplayNameFor(model => model.Status.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="manager-table__body">
@foreach (var item in Model) {
        <tr class="manager-table__row">
            <td class="manager-table__data" scope="row" data-label=@Html.DisplayNameFor(model => model.SocialReason)>
                @Html.DisplayFor(modelItem => item.SocialReason)
            </td>
            <td class="manager-table__data" scope="row" data-label=@Html.DisplayNameFor(model => model.RFC)>
                @Html.DisplayFor(modelItem => item.RFC)
            </td>
            <td class="manager-table__data" scope="row" data-label=@Html.DisplayNameFor(model => model.Address)>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td class="manager-table__data" scope="row" data-label=@Html.DisplayNameFor(model => model.Email)>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="manager-table__data" scope="row" data-label=@Html.DisplayNameFor(model => model.Phone)>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td class="manager-table__data" scope="row" data-label=@Html.DisplayNameFor(model => model.Status.Name)>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            <td>

            </td>
              <td class="manager-table__data manager-table__option" data-label="Ver">
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-magnifying-glass"></i></a>
              </td>
              <td class="manager-table__data manager-table__option" data-label="Editar">
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen"></i></a>
            </td>
          
        </tr>
}
    </tbody>
</table>
<br />
<br />
<div class="manager-table__top">
    <h3 class="manager-table__caption">Contactos</h3>

</div>

 <div style="width:fit-content">
       <a class="ripple" asp-area="" asp-controller="ProvidersContact" asp-action="Index2">
            <img src="/images/providers/Contact.png" alt="Contacto Proveedor" style="width:250px; padding:33px">
        </a>
 </div>
  
