@model ParqueProcesoDesarrollo.Web.Models.SessionViewModel

@{
    ViewData["Title"] = "Agregar Visitante - RV";
}

<h1>Buscar visitante</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddVisitor" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StatusId" />
            <div class="form-group">
                <label asp-for="VisitorId" class="control-label"></label>
                <select asp-for="VisitorId" class="form-control" asp-items="Model.Visitors"></select>
                <span asp-validation-for="VisitorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-rotate-left"></i>  Regresar a la Lista
                </a>
            </div>
        </form>
    </div>
</div>
